<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RestauraSenhaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:text="Restaurar a Senha"
        android:textSize="40dp"
        android:textColor="@color/dark_brown"
        android:textStyle="bold" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="200dp"
        android:layout_marginTop="120dp"
        android:text="Informe o e-mail cadastrado:"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etEmailSMS"
        android:layout_width="800dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="115dp"
        android:layout_marginRight="50dp"
        android:hint="Insira seu email (seuemail@email.com)"
        android:inputType="textEmailAddress"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/light_blue"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="200dp"
        android:layout_marginTop="160dp"
        android:text="Informe o celular cadastrado:"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etCelularSMS"
        android:layout_width="800dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="160dp"
        android:layout_marginRight="50dp"
        android:hint="Insira seu celular (19912345678)"
        android:inputType="phone"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/light_blue"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnEnviarSMSSenha"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="220dp"
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/teal_400"
        android:text="Enviar SMS" />

    <TextView
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="290dp"
        android:layout_marginRight="20dp"
        android:text="ATENÇÃO"
        android:textColor="@color/light_gold"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="2500dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"
        android:layout_marginRight="20dp"
        android:text="Logue novamente adiante com o código de SMS enviado e altere a senha na tela de Configurações da Conta!"
        android:textColor="@color/dark_red"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="450dp"
        android:text="Login para alterar a senha "
        android:textSize="30dp"
        android:textColor="@color/purple_700"
        android:textStyle="bold" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="200dp"
        android:layout_marginTop="515dp"
        android:text="Informe o e-mail cadastrado:"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/etEmailRefazerSenha"
        android:layout_width="800dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="510dp"
        android:layout_marginRight="50dp"
        android:hint="Insira seu email (seuemail@email.com)"
        android:inputType="textEmailAddress"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/light_blue"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="200dp"
        android:layout_marginTop="580dp"
        android:text="Senha do SMS:"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etSenhaSMS"
        android:layout_width="800dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="560dp"
        android:layout_marginRight="50dp"
        android:hint="Insira a senha mandada via SMS"
        android:inputType="textEmailAddress"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/light_blue"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnEntrarComSenhaSMS"
        android:layout_width="1500dp"
        android:layout_height="80dp"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="630dp"
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/bg_light_magenta"
        android:text="Entrar via Restauração de Senha" />




</RelativeLayout>