<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Código do Alarme: "
            android:textColor="@color/dark_brown"/>
        <TextView
            android:id="@+id/tvCodAlarme"
            android:textColor="@color/dark_magenta"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSelectHandle="@color/medium_pink"
            />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Código do Usuário: "
            android:textColor="@color/dark_brown"/>
        <TextView
            android:id="@+id/tvCodUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSelectHandle="@color/medium_pink"/>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=" Mensagem: "
            android:textColor="@color/dark_brown"/>
        <TextView
            android:id="@+id/tvMsgAlarme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSelectHandle="@color/medium_pink"/>
    </LinearLayout>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=" Data de criação: "
            android:textColor="@color/dark_brown"/>
        <TextView
            android:id="@+id/tvDataCriaSMSAlarme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSelectHandle="@color/medium_pink"/>
    </LinearLayout>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="15dp"/>


</LinearLayout>